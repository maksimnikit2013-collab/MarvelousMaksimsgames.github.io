    body { font-family: system-ui, -apple-system, "Segoe UI", Roboto, Arial; padding:2rem; color:#111; }
    button { padding:0.6rem 1rem; border-radius:8px; border:0; background:#0b66ff; color:#fff; cursor:pointer; }
    input { width:100%; padding:0.6rem; margin-top:0.5rem; border-radius:6px; border:1px solid #dfe6f3; }
